{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Express TypeORM API",
    "description": "Sample API documentation"
  },
  "basePath":"/api",
  "paths": {
    "/news": {
      "get": {
        "summary": "Get all news",
        "responses": {
          "200": {
            "description": "List of news articles"
          }
        }
      },
      "post": {
        "summary": "Create a news article",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/News"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created news article"
          }
        }
      }
    },
    "/news/{id}": {
      "get": {
        "summary": "Get a news article by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "News article"
          }
        }
      },
      "put": {
        "summary": "Update a news article by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/News"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated news article"
          }
        }
      },
      "delete": {
        "summary": "Delete a news article by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          }
        }
      }
    }
  },
  "definitions": {
    "News": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "publishedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
