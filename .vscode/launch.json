{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
      "request": "launch",
      "name": "Debug ",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/server.ts", // Change this to your entry file
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js" // Change to your compiled output path
      ],
      "preLaunchTask": "npm: build", // Optional: Build your TypeScript before launching
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"], // Required to run TypeScript files directly
      "env": {
        "NODE_ENV": "development"
      }
        }
    ]
}